page {
  background-color: #fafafa;
}
/* 顶部轮播样式 */
.sw-top {
  width: 750rpx;
  height: 320px;
}

.sw-top image {
  width: 100%;
  height: 100%
}

/* 整体布局容器 */
.page-container {
  width: 100%;
  height: 1000px;
  position: absolute;
  top: 290px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box {
  background-color: #fff;
  padding: 12px;
  width: 680rpx;
  border-radius: 12px;
  margin-bottom: 12px;
}
/* 授权登录框 */
.login-container {
  display: flex;
  align-items: center;
}
.login-container .avatar {
  width: 48px;
  height: 48px;
  margin-right: 4px;
}
.login-container .content {
  flex: 1;
}
.login-container .content .nickname {
  font-weight: 700;
  font-size: 18px;
}
.login-container .btn {
  background-color: #f00;
  color: #fff;
}

/* 宫格布局 */
.grid-container .row {
  display: flex;
}

.grid-container .top image {
  height: 340rpx;
}

.grid-container .bottom {
  border-top: 1px solid #eaeaea;
}

.grid-container .bottom image {
  height: 170rpx;
}

/* 推荐饮品 */
.recommend-container {
  background: url('data:image/png;base64,');
}

.recommend-container .title image {
  height: 30px;
  width: 100px;
}

.recommend-container .sv-goods {
  display: flex;
  flex-wrap: nowrap;
}

.recommend-container .goods-item {
  padding: 12px;
  background: #fff;
  border-radius: 6px;
  width: 288rpx;
  height: 180px;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 12px;
}

.recommend-container .goods-item image {
  width: 240rpx;
  height: 220rpx;
}

.recommend-container .goods-item .price-btn {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
wx-button[size=mini] {
  padding: 0;
}
.recommend-container .goods-item .btn  {
  margin: 0;
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background: #f00;
  color: #fff;
}

/* 资讯 */
.news-title {
  font-size: 24px;
  font-weight: 700;
}
.news-swiper {
  width: 100%;
  border-radius: 12px;
}

.news-swiper swiper-item {
  border-radius: 12px;
}

.news-swiper image {
  width: 100%;
}

