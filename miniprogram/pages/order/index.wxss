/* 页面布局容器 */
.page-container {
  background-color: #f7f7f7; /* 页面浅灰背景 */
  min-height: 100vh;         /* 让页面至少铺满屏幕高度 */
  display: flex;
  flex-direction: column;    /* 子元素纵向排列 */
  box-sizing: border-box;
}

/* 顶部导航栏 */
.nav-bar {
  width: auto;
  height: 150rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end; /* 所有子元素靠底部 */
  padding: 0 30rpx 20rpx;    /* 下内边距保留，上内边距设为 0 */
  box-sizing: border-box;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

/* 新增：包裹容器横向排列 */
.nav-content {
  display: flex;
  align-items: center;
  width: 100%;
  gap: 20rpx; /* 元素间距 */
}

.nav-tabs {
  display: flex;
  gap: 80rpx;
  white-space: nowrap;
}

.search-box {
  flex: 1; /* 搜索框占剩余空间 */
  height: 64rpx;
  background-color: #f2f2f2;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.search-box input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}
.nav-item {
  size: 40px ;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
  position: relative;
  padding-bottom: 6rpx;
  cursor: pointer;
 
}

/* 当前激活项 */
.nav-item.active {
  color: #000000;
  font-weight: bold;
}

/*功能区布局*/
.nav-bar2{
  width: auto;
  height: 400rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: flex-start; 
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}
/* 店铺信息容器 */
.store-info {
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx 20rpx 30rpx;
  background-color: #ffffff;
}

/* 店铺图标 */
.store-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 店铺名称 */
.store-name {
  font-size: 32rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 箭头符号 */
.arrow {
  font-size: 28rpx;
  color: #999;
}

/* 功能标签栏 */
.category-tabs {
  margin-top: auto;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  background-color: #f7f7f7;
  border-bottom: 1rpx solid #e5e5e5;
}

.tab-item {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  text-align: center;
}

.tab-item.active {
  color: #ff4d4d;
  font-weight: bold;
}